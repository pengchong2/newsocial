<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:left="5dp"
        android:top="5dp">
        <shape android:shape="rectangle" >
            <padding
                android:bottom="1.5dp"
                android:right="1.5dp"
                 />
            <!--这里可以是梯度的值，也可以是solid，看实际的效果自己调测-->
            <solid android:color="#818181"/>
        </shape>
    </item>

    <item
        android:left="5dp"
        android:top="5dp">

        <shape android:shape="rectangle" >
            <padding
                android:bottom="14dp"
                android:left="15dp"
                android:right="15dp"
                android:top="14dp" />

            <gradient
                android:angle="45"
                android:centerX="50"
                android:centerY="50"
                android:endColor="#484AFF"
                android:startColor="#989ae4" />

        </shape>
    </item>
</layer-list>
